{
  "name": "simple-talk",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc --noEmit -p tsconfig.server.json && tsc --noEmit -p tsconfig.client.json",
    "build": "tsc -p tsconfig.server.json && tsc -p tsconfig.client.json",
    "watch": "concurrently \"tsc -w -p tsconfig.server.json\" \"tsc -w -p tsconfig.client.json\"",
    "start:wss": "node dist/server/wss-server.js",
    "start:https": "node dist/server/https-server.js",
    "generate-certs": "chmod +x scripts/generate-certs.sh && ./scripts/generate-certs.sh",
    "dev:local": "npm run build && concurrently \"npm run watch\" \"npm run start:server\" \"serve --listen tcp://localhost:3000 .\"",
    "dev": "npm run build && npm run generate-certs && concurrently \"npm run watch\" \"npm run start:wss\" \"npm run start:https\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "ws": "^8.16.0"
  }
}