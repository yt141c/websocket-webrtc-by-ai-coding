{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "ES6",
        "target": "ES2020",
        "moduleResolution": "node",
        "sourceMap": true
    },
    "include": [
        "src/client/**/*",
        "src/types/**/*"
    ],
    "exclude": [
        "src/server/**/*",
        "node_modules"
    ]
}